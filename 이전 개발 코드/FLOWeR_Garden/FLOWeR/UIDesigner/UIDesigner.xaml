<UserControl x:Class="FLOWeR_Garden_Ver02.FLOWeR.UIDesigner.UIDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FLOWeR_Garden_Ver02.FLOWeR.UIDesigner"
             mc:Ignorable="d" 
             Height="800" Width="1280">
    <Border BorderBrush="Thistle" BorderThickness="5" Padding="1">
        <Grid MouseDown="Grid_MouseDown" PreviewMouseDown="Grid_PreviewMouseDown">
            <Grid.Background>
                <ImageBrush x:Name="imageBackground" Stretch="None"/>
            </Grid.Background>
            
            <Canvas x:Name="canvasArea"/>
        </Grid>
    </Border>
</UserControl>
